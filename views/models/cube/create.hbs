<h1>Create</h1>
<div class="form">
  <form action='/create' method="POST">
    <label for="name">Name</label>
    <input type="text" id="name" name="name" pattern="[A-Za-z0-9\s]{5,}" title="Must be at least 5 characters long, who could be English letters, digits and whitespaces" value="{{name}}">
    <label for="description">Description</label>
    <textarea id="description" name="description">{{description}}</textarea>
    <label for="image">ImageUrl</label>
    <input type="text" id="image" name="imageUrl" value="{{imageUrl}}">
    <label for="difficulty">Difficulty</label>
    <select id="difficulty" name="difficulty" value="{{difficulty}}">
      <option value="1">1 - Very Easy</option>
      <option value="2">2 - Easy</option>
      <option value="3">3 - Medium (Standard 3x3)</option>
      <option value="4">4 - Intermediate</option>
      <option value="5">5 - Expert</option>
      <option value="6">6 - Hardcore</option>
    </select>
    {{#if isLoggedIn}}
      <input type="submit" value="Create">
    {{/if}}
  </form>
</div>